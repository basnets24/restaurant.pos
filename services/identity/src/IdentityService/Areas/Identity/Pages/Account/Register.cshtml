@page
@model RegisterModel
@{
    ViewData["Title"] = "Create your account";
}

<h2>Create your account</h2>
<p class="muted">Start using Restaurant POS in minutes</p>

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form">
    <div asp-validation-summary="ModelOnly" class="error" role="alert"></div>

    <div class="field">
        <label class="label" asp-for="Input.Email">Email</label>
        <input class="input" asp-for="Input.Email" autocomplete="username" placeholder="name@example.com" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="field">
        <label class="label" asp-for="Input.Password">Password</label>
        <input class="input" asp-for="Input.Password" autocomplete="new-password" placeholder="••••••••" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="field">
        <label class="label" asp-for="Input.ConfirmPassword">Confirm password</label>
        <input class="input" asp-for="Input.ConfirmPassword" autocomplete="new-password" placeholder="••••••••" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="row">
        <a class="link" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already have an account? Sign in</a>
    </div>

    <button id="registerSubmit" type="submit" class="btn btn-primary">Create account</button>
</form>

@if ((Model.ExternalLogins?.Count ?? 0) > 0)
{
    <div style="margin-top:16px">
        @foreach (var provider in Model.ExternalLogins!)
        {
            <form style="display:inline" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <button type="submit" class="btn" name="provider" value="@provider.Name" title="Register with @provider.DisplayName">
                    Continue with @provider.DisplayName
                </button>
            </form>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
