@page
@model IdentityService.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<h2>Reset your password</h2>
<p class="muted">Choose a new password for your account.</p>

@if (Model.Done)
{
    <p class="muted">Password reset successful. <a class="link" asp-page="./Login">Sign in</a></p>
}
else
{
    <form method="post" class="form">
        <input type="hidden" asp-for="Input.Code" />
        <div class="field">
            <label class="label" asp-for="Input.Email">Email</label>
            <input class="input" asp-for="Input.Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="field">
            <label class="label" asp-for="Input.Password">New password</label>
            <input class="input" asp-for="Input.Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="field">
            <label class="label" asp-for="Input.ConfirmPassword">Confirm password</label>
            <input class="input" asp-for="Input.ConfirmPassword" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" type="submit">Reset password</button>
    </form>
}

@section Scripts { <partial name="_ValidationScriptsPartial" /> }

