@page
@model IdentityService.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot password";
}

<h2>Forgot your password?</h2>
<p class="muted">Enter your email and weâ€™ll send a reset link.</p>

@if (Model.EmailSent)
{
    <p class="muted">If an account exists for <strong>@Model.Input.Email</strong>, a reset link has been sent.</p>
}
else
{
    <form method="post" class="form">
        <div class="field">
            <label class="label" asp-for="Input.Email">Email</label>
            <input class="input" asp-for="Input.Email" autocomplete="username" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" type="submit">Send reset link</button>
    </form>
}

@section Scripts { <partial name="_ValidationScriptsPartial" /> }

