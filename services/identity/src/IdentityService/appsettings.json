{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  
  "AllowedHosts": "*",
  
  "ServiceSettings": {
    "ServiceName": "Identity"
  },

  "IdentitySettings" : {
    "AdminUserEmail": "admin@pos.com",
    "AdminUserPassword": ""
  },
  
  "PostgresSettings": {
    "Host": "localhost",
    "Port": 5432,
    "Database": "identity_db",
    "Username": "postgres",
    "Password": ""
  },
  
  "IdentityServerSettings": {
    "ApiScopes": [
      {
        "Name" : "IdentityServerApi"
      }
    ],
    "ApiResources": [
      {
        "Name" : "Identity",
        "Scopes" : [
          "IdentityServerApi"
        ],
        "UserClaims" : [
          "role"
        ]
      }
    ],
    "Clients": [
      {
        "ClientId" : "postman",
        "AllowedGrantTypes" : [
          "authorization_code"
        ],
        "RequireClientSecret" : false,
        "RedirectUris": [
          "urn:ietf:wg:oauth:2.0:oob"
        ],
        "AllowedScopes": [
          "openid",
          "profile",
          "IdentityServerApi",
          "roles"
        ],
        "AlwaysIncludeUserClaimsInIdToken" : true
      }
    ],
    "IdentityResources": []
  }
  
}